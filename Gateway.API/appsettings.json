{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "habit-route": {
        "ClusterId": "habit-cluster",
        "AuthorizationPolicy": "dabit-jwt",
        "Match": {
          "Path": "/api/habit/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-instance-1": {
            "Address": "https://localhost:5002"
          }
        }
      },
      "habit-cluster": {
        "Destinations": {
          "habit-instance-1": {
            "Address": "https://localhost:5001"
          }
        }
      }
    }
  }
}